:8080 {

	@api {
		path /api/*
	}

	reverse_proxy @api {
		to localhost:3000
	}

	route @api {
		openapi {
			spec ./samples/hello.yaml
			log_error
			validate request_params 
		}
	}

	handle_errors {
		respond @api "Resource: {http.request.orig_uri}. Error: {openapi.error}" {openapi.status_code} {
			close
		}
	}
}
